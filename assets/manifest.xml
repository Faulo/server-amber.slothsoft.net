<?xml version="1.0"?>
<assets xmlns="http://schema.slothsoft.net/farah/module" version="1.1">
    <resource-directory name="css" type="text/css" />
    <resource-directory name="js" type="application/javascript" />
    <resource-directory name="xsl" type="application/xslt+xml" />
    <resource-directory name="dictionary" type="application/xml" />

    <use-manifest name="monsters" ref="//slothsoft@amber/api/gfx?archiveId=Monster_gfx.amb" />

    <directory name="sitemap">
        <resource use="template" name="template" type="application/xslt+xml" />
        <use-document ref="/games-index" name="index" />
    </directory>

    <resource name="games-index" type="application/xml" />

    <resource-directory name="source" type="*/*" />

    <directory name="static">
        <resource-directory type="image/x-icon" name="icons"></resource-directory>
        <resource-directory type="application/font-sfnt" name="fonts"></resource-directory>
        <resource-directory type="image/png" name="screenshots"></resource-directory>
    </directory>

    <fragment name="pages">
        <fragment name="default">
            <import ref="//slothsoft@amber/includes/AmberPicker" />
            <link-stylesheet ref="/css/ambermoon" />
            <link-stylesheet ref="/css/default" />
            <link-stylesheet ref="/css/fonts" />
            <link-stylesheet ref="/css/colors" />
            <link-stylesheet ref="/css/layout" />
            <use-template ref="/xsl/pages/default" />
            <use-document ref="//slothsoft@farah/current-sitemap" name="sites" />
            <link-dictionary ref="/dictionary" />
        </fragment>
        <fragment name="ambermoon">
            <fragment name="default">
                <import ref="/pages/default" />
            </fragment>
            <fragment name="resource">
                <import ref="/pages/default" />
                <use-document ref="//slothsoft@amber/api/viewer" name="content" />
            </fragment>
            <fragment name="editor">
                <import ref="/pages/default" />
                <use-document ref="//slothsoft@amber/api/editor" name="content" />
            </fragment>
            <fragment name="gallery">
                <import ref="/pages/default" />
                <fragment name="content" use="document">
                    <use-template ref="/xsl/content/gallery" />
                </fragment>
            </fragment>
            <fragment name="runes">
                <import ref="/pages/default" />
                <fragment name="content" use="document">
                    <use-template ref="/xsl/content/runes" />
                </fragment>
            </fragment>
        </fragment>
    </fragment>
</assets>
